{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["dom", "ES2015", "ES2017"],
    "baseUrl": "src",
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}